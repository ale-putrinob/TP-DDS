{{#partial "contenido"}}
<html>
	<head>
		<title>Cargar Operacion de Egreso</title>
	</head>
	<ol class="breadcrumb">
    	<li class="breadcrumb-item">
      		<a routerLink="/home">Inicio</a>
    	</li>
    	<li class="breadcrumb-item active">Operacion de Egreso / Cargar Operacion</li>
  	</ol>
  	<body>
		<header>
			<h2> Cargar Operacion de Egreso </h2>			
		</header>
		<section>
			<div>
				Fecha &nbsp&nbsp
				<input type = "date" id = "Fecha" placeholder = "Ingresar fecha">			
			</div>
			<div>
				Criterio de Seleccion del Proveedor
					<select name="Criterio de Seleccion del Proveedor">
   						<option selected value="0"> Elige una opcion </option>
       						<option value="1">Menor Valor</option>
   						</optgroup> 
					</select>				
			</div>
			<div>
				Medio De Pago &nbsp&nbsp
				<input type = "number" id = "ID" placeholder = "Ingresar ID">
				<select name="Tipo de pago">
   						<option selected value="0"> Elige una opcion </option>
       						<option value="1">Tarjeta de credito</option>
       						<option value="2">Tarjeta de debito</option>
       						<option value="3">Efectivo</option>
       						<option value="1">Dinero en cuenta</option>
       						<option value="1">Cajero automatico</option>
   						</optgroup> 
				</select>			
			</div>
			<div> <br>
				<input type = "button" id = "filtrar" value = "Filtrar">
			</div>
		</section>
	</body>
	
</html>

{{/partial}}
{{>layout.hbs}}