{{#partial "contenido"}}
<html>
	<head>
		<title>Cargar Operacion de Egreso</title>
	</head>
	<ol class="breadcrumb">
    	<li class="breadcrumb-item">
      		<a routerLink="/home">Inicio</a>
    	</li>
    	<li class="breadcrumb-item active">Operacion de Egreso / Cargar Operacion</li>
  	</ol>
  	<body>
		<header>
			<h2> Cargar Operacion de Egreso </h2>			
		</header>
		<section>
			<div>
				Fecha &nbsp&nbsp
				<input type = "date" name = "Fecha" placeholder = "Ingresar fecha">			
			</div><br>
			<div>
				Criterio de Seleccion del Proveedor
					<select name = "Criterio de Seleccion del Proveedor">
   						<option selected value="0"> Elige una opcion </option>
       						<option value="1">Menor Valor</option>
   						</optgroup> 
					</select>				
			</div><br>
			<div>
				Medio De Pago &nbsp&nbsp
				<input type = "number" id = "Identificador" placeholder = "Ingresar ID">&nbsp&nbsp
				<select name="Tipo de pago">
   						<option selected value="0"> Elige una opcion </option>
       						<option value="1">Tarjeta de credito</option>
       						<option value="2">Tarjeta de debito</option>
       						<option value="3">Efectivo</option>
       						<option value="4">Dinero en cuenta</option>
       						<option value="5">Cajero automatico</option>
   						</optgroup> 
				</select>			
			</div><br>
			<div>
				Documento comercial &nbsp&nbsp
				<input type = "text" id = "Tipo" placeholder = "Ingresar ID">&nbsp&nbsp	
				<input type = "number" id = "Numero" placeholder = "Ingresar ID">&nbsp&nbsp	
			</div><br>
			<div>
			Proveedor &nbsp&nbsp
			<select name="Proveedor">
   						<option selected value="0"> Elige una opcion </option>
   							{{#each provs}}
       						<option>{{ nombreApellido }}</option>
       						{{/each}}
   						</optgroup> 
				</select>		
			</div>
			<div> <br>
				<input type = "button" id = "cancelar" value = "Cancelar">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
				<input type = "button" id = "siguiente" value = "Siguiente">
			</div>
		</section>
	</body>
	
</html>

{{/partial}}
{{>layout.hbs}}