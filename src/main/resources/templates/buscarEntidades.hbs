{{#partial "contenido"}}
<html>
	<head>
		<title>Buscar Entidades</title>
	</head>
	<ol class="breadcrumb">
    	<li class="breadcrumb-item">
      		<a routerLink="/home">Inicio</a>
    	</li>
    	<li class="breadcrumb-item active">Entidad / Buscar Entidad</li>
  	</ol>
	<body>
		<header>
			<h2> Buscar Entidades </h2>			
		</header>
		<section>
			<div>
				Categoria <br>
				<br><input type = "text" id = "Categoria " placeholder = "Ingresar categoria">			
			</div>
			<div>
				<br> Clase <br>
					<select name="Clase">
   						<option selected value="0"> Elige una opcion </option>
       						<option value="1">Juridica</option> 
       						<option value="2">Base</option> 
   						</optgroup> 
					</select>				
			</div>
			<div> <br>
				<input type = "button" id = "filtrar" value = "Filtrar">
			</div>
			
			<div>
				<table>
					<tr>
						<th> Id </th> &nbsp&nbsp&nbsp
						<th> Tipo </th> &nbsp&nbsp&nbsp
						<th> Categoria </th>
					</tr>
					{{#each entidades}}
						<tr>
							<td> {{ id }} </td> &nbsp&nbsp&nbsp
							<td> {{ tipoEntidad }} </td> &nbsp&nbsp&nbsp
							<td> {{ categoriaEntidad }} </td>
						</tr> 
					{{/each}}
				</table>
			</div>
		</section>
	</body>
</html>

{{/partial}}
{{>layout.hbs}}
