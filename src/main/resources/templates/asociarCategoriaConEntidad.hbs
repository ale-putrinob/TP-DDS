{{#partial "contenido"}}
<html>
<head>
  <title>Asociar categoría a entidad</title>
  	<link rel="stylesheet"  href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
</head>
<body>
	<ol class="breadcrumb">
	  <li class="breadcrumb-item">
	    <a routerLink="/home">Inicio</a>
	  </li>
	  <li class="breadcrumb-item active">Categoría / Asociar categoría a entidad</li>
	</ol>
	<h3>Asociar categoría a entidad</h3>
	<div>
	<form action="/categorias/asociarConEntidad" method = "POST">
		<div>
	        <label>Entidad</label><br>
  			<select class="form-control" name="entidad">
          		{{#each entidadesJuridicas}}
            		<option>{{id}} {{nombreFicticio}}</option>
          		{{/each}}
          		{{#each entidadesBases}}
            		<option>{{id}} {{nombreFicticio}}</option>
          		{{/each}}
        	</select>
        	<small class="form-text text-muted">Seleccione la entidad</small>
		</div>
		<div>
			<label>Categoría</label><br>
  			<select class="form-control" name="categoria">
          		{{#each categorias}}
            		<option>{{id}} {{nombre}}</option>
          		{{/each}}
        	</select>
        	<small class="form-text text-muted">Seleccione la categoria</small>
		</div>
	        <br><br>
	    	<button type="submit" class="btn btn-lg btn-primary btn-block" style="width: 400px">Asociar</button>
		</div>
	</form>
	</div>
	<br>
	
	
	
</body>
</html>

{{/partial}}
{{>layout.hbs}}